	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
    visual = !gitk
    who = !git-who
	g = grep -n
	gi = grep -ni
[core]
	editor = hx
[pull]
	rebase = false
